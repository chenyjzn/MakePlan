<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/my_gray_75</item>
        <item name="colorPrimaryVariant">@color/my_gray_75</item>
        <item name="colorPrimaryDark">@color/my_gray_45</item>
        <item name="colorAccent">@color/yellow_400</item>
        <item name="colorSecondary">@color/yellow_400</item>
        <item name="colorSecondaryVariant">@color/yellow_600</item>
        <item name="android:colorBackground">@color/my_gray_45</item>
        <item name="colorSurface">@color/my_gray_60</item>
        <item name="colorError">@color/red_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/blue_gray_900</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/white</item>
        <item name="buttonStyle">@style/ButtonStyleNoAllCaps</item>
        <item name="bottomSheetDialogTheme">@style/EditDialogTheme</item>
    </style>

    <style name="MaterialLightNoBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo_900</item>
        <item name="colorPrimaryDark">@color/indigo_d</item>
        <item name="colorAccent">@color/yellow_400</item>
        <item name="android:colorBackground">@color/gray_900</item>
        <item name="colorSurface">@color/gray_800</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="editTextColor">@color/white</item>
    </style>

    <style name="MaterialNoBarTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/my_gray_60</item>
        <item name="colorPrimaryVariant">@color/my_gray_75</item>
        <item name="colorPrimaryDark">@color/my_gray_45</item>
        <item name="colorAccent">@color/yellow_400</item>
        <item name="colorSecondary">@color/yellow_400</item>
        <item name="colorSecondaryVariant">@color/yellow_600</item>
        <item name="android:colorBackground">@color/my_gray_45</item>
        <item name="colorSurface">@color/my_gray_60</item>
        <item name="colorError">@color/red_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/blue_gray_900</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/black</item>
    </style>

    <style name="MaterialLightTheme" parent="Theme.MaterialComponents.Light">
        <!-- Add attributes here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--To fix rendering in preview -->
    <style name="ButtonStyleNoAllCaps" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/my_gray_60</item>                   <!--header background-->
        <item name="android:windowBackground">@color/my_gray_45</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/yellow_400</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/white</item>     <!--days of the month-->
        <item name="android:textColorSecondary">@color/my_gray_200</item>    <!--days of the week-->
        <item name="android:textColor">@color/yellow_400</item>
    </style>

    <style name="GanttToolImageButton">
        <item name="android:background">@drawable/button_bk_1</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:tint">@drawable/button_tint_1</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="GanttToolToggleButtonLeft">
        <item name="android:background">@drawable/button_bk_toggle_l</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textColor">@drawable/button_tint_toggle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GanttToolToggleButtonCenter">
        <item name="android:background">@drawable/button_bk_toggle_c</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textColor">@drawable/button_tint_toggle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GanttToolToggleButtonRight">
        <item name="android:background">@drawable/button_bk_toggle_r</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textColor">@drawable/button_tint_toggle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="colorControlNormal">@color/my_gray_180</item>
        <item name="colorControlActivated">@color/yellow_400</item>
        <item name="bottomSheetStyle">@style/EditDialogStyle</item>
        <item name="buttonStyle">@style/ButtonStyleNoAllCaps</item>
    </style>

    <style name="EditDialogStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/EditDialogThemeShape</item>
    </style>

    <style name="EditDialogThemeShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
